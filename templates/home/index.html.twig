{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}


<div class="container-fluid no-gutters">
  <div class="jumbotron">
    <h1 class="text-center">Bienvenue sur notre boutique</h1>
  </div>
  {% if items %}
  <div class="row">
    <div class="col-md-12">
      <h3 class="mb-3">Nos derniers produits : </h3>
    </div>
    {% for item in items %}
    <div  class="{{ items|length  < 3 ? "col-sm-12 col-md-8 offset-md-2" : "col-sm-6 col-md-4" }}">
      <div class="card">
        <img src={{ item.UrlPicture }} class="img-responsive">
        <hr>
        <div class="caption">
          <div class="row">
            <div class="col-md-6 col-xs-6">
              <h5 class="mt-3 ml-3">{{ item.name}}</h5>
            </div>
            <div class="col-md-6 col-xs-6 price">
              <h6><label class="mt-3 ml-3">{{ item.price/100}}€</label></h6>
            </div>
            <div class="col-md-12 col-xs-12">
              <p class="card-text text-right mr-5 mb-3"><small class="text-muted"> Stock : {{ item.Quantity}}</small>
              </p>
            </div>
          </div>
          <div class="col-md-12" style="margin: 0;padding: 0;">
            <div class="jumbotron">
              <h5>Déscription du produit:</h5>
              <p class="ml-2">{{ item.description}}</p>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6 offset-md-3">
              <a href="#" class="btn btn-success" style="width: 100%;"><span
                  class="glyphicon glyphicon-shopping-cart"></span> Buy</a></div>
          </div>
        </div>
      </div>
    </div>
    {% endfor %}
  {% else %}
    <div class="col-md-12">
      <p class="text-center">
        Aucun produit n'est disponible
      </p>
    </div>
  </div>
  {% endif %}
</div>
</div>
{% endblock %}