{% extends 'base.html.twig' %}

{% block title %}Items{% endblock %}

{% block body %}
    <h1>Items</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ item.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ item.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ item.price }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ item.description }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ item.quantity }}</td>
            </tr>
            <tr>
                <th>Url_picture</th>
                <td>{{ item.urlPicture }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('items_index') }}">back to list</a>

    <a href="{{ path('items_edit', {'id': item.id}) }}">edit</a>

    {{ include('items/_delete_form.html.twig') }}
{% endblock %}
